# Use specific platform for CI compatibility
FROM php:8.4-fpm

# Install system dependencies with CI optimizations
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    make \
    zip unzip \
    vim \
    git \
    gnupg2 \
    curl \
    libicu-dev \
    libxml2-dev \
    libzip-dev \
    libcurl4-openssl-dev \
    pkg-config \
    libssl-dev \
    libpq-dev \
    ca-certificates && \
    update-ca-certificates && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install essential PHP extensions
RUN docker-php-ext-install \
    ctype \
    iconv \
    simplexml \
    opcache \
    curl \
    intl

# Copy PHP configuration
COPY templates/php-8-4-base/conf.d/50-app.ini /usr/local/etc/php/conf.d/
COPY templates/php-8-4-base/php-fpm.d/www.conf /usr/local/etc/php-fpm.d/

RUN mkdir -p /var/www/default && chown -R www-data:www-data /var/www/default && chmod -R 755 /var/www/default
